<Window x:Class="XML_DB.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SettingsWindow" Height="275" Width="500">
    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="{DynamicResource MainColor}"/>
        </Grid.Background>
        <TextBox x:Name="textBoxPass" Height="30" Margin="36,87,39,0" TextWrapping="Wrap" Text="Hasło" VerticalAlignment="Top" BorderThickness="2"/>
        <Button x:Name="button_openSdfFile" Content="Wczytaj plik *.sdf" Margin="0,25,39,0" VerticalAlignment="Top" Height="30" Click="button_openSdfFile_Click" HorizontalAlignment="Right" Width="130" BorderThickness="2"/>
        <TextBox x:Name="textBox_pathToSDF" Height="30" Margin="36,25,199,0" TextWrapping="Wrap" Text="Ścieżka do pliku ..." VerticalAlignment="Top" BorderThickness="2"/>
        <Button x:Name="buttonSave" Content="Zapisz ustawienia" Margin="186,159,176,0" VerticalAlignment="Top" Height="30" Click="buttonSave_Click" BorderThickness="2"/>

    </Grid>
</Window>
