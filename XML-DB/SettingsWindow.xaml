<Window x:Class="XML_DB.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SettingsWindow" Height="400" Width="600">
    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="{DynamicResource MainColor}"/>
        </Grid.Background>
        <TextBox x:Name="textBoxPass" HorizontalAlignment="Left" Height="23" Margin="22,73,0,0" TextWrapping="Wrap" Text="Hasło" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="button_openSdfFile" Content="Wczytaj plik *.sdf" Margin="0,21,175,0" VerticalAlignment="Top" Height="23" Click="button_openSdfFile_Click" HorizontalAlignment="Right" Width="96"/>
        <TextBox x:Name="textBox_pathToSDF" Height="23" Margin="22,23,320,0" TextWrapping="Wrap" Text="Ścieżka do pliku ..." VerticalAlignment="Top"/>
        <Button x:Name="buttonSave" Content="Zapisz ustawienia" HorizontalAlignment="Left" Margin="242,189,0,0" VerticalAlignment="Top" Width="106" Height="35" Click="buttonSave_Click"/>

    </Grid>
</Window>
